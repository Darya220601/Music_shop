<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/enter_your_name" />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/shopphoto"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textViewSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/almendra"
        android:rotation="-25"
        android:text="@string/sale_name"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>
    <TextView
        android:id="@+id/textViewSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/spiner_name"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        />



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/guitar"
           android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/pricename"
            android:layout_alignBottom="@id/imageView2"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textAlignment="textEnd"
            android:textColor="#191818"
            android:textStyle="bold"
            android:layout_marginStart="30dp"/>
        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Quantityname"
            android:layout_alignBottom="@id/imageView2"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textAlignment="textEnd"
            android:textColor="#191818"
            android:textStyle="bold"
            android:layout_marginStart="100dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/priceViewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/dollars"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:backgroundTint="@color/purple_700"
            android:text="@string/minus"
            android:onClick="decreaseQuantity"/>

        <TextView
            android:id="@+id/textViewQuantityCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.4"
            android:text="@string/countOfItems"
            android:textAlignment="center"
            tools:ignore="DuplicateIds"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:backgroundTint="@color/purple_700"
            android:onClick="increaseQuantity"
            android:text="@string/button_plus"
            android:layout_marginEnd="20dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:text="@string/add_to_cart"
        app:backgroundTint="@color/purple_700"

        android:onClick="addToCart"
       />

   </LinearLayout>

